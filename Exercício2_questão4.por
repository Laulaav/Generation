programa
{
	
	funcao inicio()
	{
	    inteiro numero

	    escreva("\nInsira número desejado:")
	    leia(numero)

	    se(numero % 2 == 0){
	    	escreva("\nO número inserido é par")
	    }
	    senao{
	    	escreva("\nO número inserido é impar")
	    }

	    se(numero>=0){
	    	escreva("\nO número inserido é positivo")
	    }
	    senao{
	    	escreva("\nO número inserido é negativo")
	    }
	    	
	    
	}
}
